<div class="error">


    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

</div>


<%= render 'books/user_info', user: @user %>
<%= render 'books/new_book', book: @book %>



<% @books.each do |book| %>

  <%= link_to user_path(book.user) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <% end %>

  <%= link_to book_view_path(book) do %>
    <%= book.title %>
  <% end %>

  <%= book.body %>

<% end %>
