<div class="error">

<div class="row">
    <div class="col-4">
        <div><%= render 'users/user_info', user: @my_user %></div>
        <div><%= render 'books/new_book', book: @new_book %></div>
    </div>

    <div class="col-8">
<!--ここから-->
<h1>Book detail</h1>

  <table class="table">

  <td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>


  <div><%=_to user_path(@book.user) do %>
  <%= @book.user.name %>
  <% end %></div>
  </td>

  <td>
  <%= link_to book_path(@book) do %>
  <%= @book.title %>
  <% end %>
  </td>

  <td>
  <%= @book.body %>
  </td>


  <% if @book.user == current_user %>
    <td><%= link_to 'edit', edit_book_path(@book), class: 'btn btn-success mr-4' %>
    <%= link_to 'delete', book_path(@book), class: 'btn btn-danger', method: :delete %></td>
  <% end %>

</table>
<!--ここまで-->
  </div>
</div>


