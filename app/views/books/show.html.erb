<div class="row">

  <div class="col-md-3">
      <div><%= render 'users/user_info', user: @book.user %></div>
      <div><%= render 'books/new_book', book: @new_book %></div>
  </div>

  <div class="col-md-8 offset-md-1">

    <h1>Book detail</h1>

    <table class="table">

      <td>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>

        <div>
          <%= link_to user_path(@book.user) do %>
          <%= @book.user.name %>
          <% end %>
        </div>
      </td>

      <td>
        <%= link_to book_path(@book) do %>
        <%= @book.title %>
        <% end %>
      </td>

      <td>
        <%= @book.body %>
      </td>


      <% if @book.user == current_user %>
        <td>
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success mr-4' %>
          <%= link_to 'Destroy', book_path(@book), class: 'btn btn-danger', method: :delete, data: {confirm: '本当に削除しますか？'} %>
        </td>
      <% end %>

    </table>

  </div>

</div> <!-- "row" の終了タグ-->