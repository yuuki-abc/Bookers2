<div class="row">
    <div class="col-4">
        <div><%= render 'users/user_info', user: @my_user %></div>
        <div><%= render 'books/new_book', book: @new_book %></div>
    </div>

    <div class="col-8">

      <h1>Uusers</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= link_to user_path(user) do %>
                            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
                        <% end %>
                    </td>

                    <td><%= user.name %></td>

                    <td><%= link_to 'show', user_path(user) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

  </div>
</div>